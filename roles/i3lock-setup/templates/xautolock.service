[Unit]
Description=XAutoLock runs screen saver after an inactivity delay
Documentation=man:xautolock(1)
After=display-manager.service

[Service]
ExecStart=/usr/bin/xautolock -time 5 -locker {{ locker_command | quote }} -notify 20 -notifier "timeout 5 i3-nagbar -t warning -m 'Screen saver imminent.'" -corners '-000'
Restart=always
RestartSec=3

[Install]
WantedBy=default.target
